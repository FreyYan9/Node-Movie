extends ../layout

block content
	.container
		.row
			each cate in categorys
				.panel.panel-primary
					.panel-hedaing
						h3 #{cate.name}
					.panel-body
						if cate.movies && cate.movies.length>0
							each item in cate.movies
								.col-md-2
									.thumbnail
										a(href="/movie/#{item._id}",)
											img(src="#{item.poster}",alt="#{item.title}")
										.caption
											h3 #{item.title}
											p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片